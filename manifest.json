{
	"manifest_version": 2,
	"name": "__MSG_name__",
	"description": "__MSG_desc__",
	"version": "1.0.0",
	"homepage_url": "https://github.com/flease/add-to-things",
	"default_locale": "en",
	"icons": {
		"16": "images/icon.svg",
		"48": "images/icon.svg",
		"128": "images/icon.svg"
	},
	"browser_action": {
		"default_icon": { 
			"19": "images/icon.svg",
			"38": "images/icon.svg"
		},
		"default_title": "__MSG_title__"
	},
	"permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}
